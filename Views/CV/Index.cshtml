@model MyCVApp.ViewModels.CVViewModel

@{
    ViewData["Title"] = "My CV";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .cv-section {
            margin-bottom: 2rem;
        }

        .section-title {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
            color: #0d6efd;
        }

        .contact-info i {
            width: 25px;
            color: #0d6efd;
        }

        .skill-badge {
            background-color: #e7f1ff;
            color: #0d6efd;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            margin: 0.25rem;
            display: inline-block;
        }

        .timeline-item {
            margin-bottom: 1.5rem;
        }

        .timeline-date {
            font-weight: bold;
            color: #6c757d;
        }

        .responsibility-list {
            list-style-type: none;
            padding-left: 0;
        }

            .responsibility-list li {
                margin-bottom: 0.5rem;
                padding-left: 1.5rem;
                position: relative;
            }

                .responsibility-list li:before {
                    content: "•";
                    color: #0d6efd;
                    font-weight: bold;
                    position: absolute;
                    left: 0;
                }

        .profile-header {
            background-color: #f8f9fa;
            padding: 2rem;
            border-radius: 10px;
            margin-bottom: 2rem;
        }

        .proficiency-bar {
            height: 8px;
            background-color: #e9ecef;
            border-radius: 4px;
            margin-top: 5px;
        }

        .proficiency-fill {
            height: 100%;
            background-color: #0d6efd;
            border-radius: 4px;
        }

        .activity-item {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="display-4">@Model.PersonalInfo.FullName</h1>
                    <h3 class="text-primary">@Model.PersonalInfo.ProfessionalTitle</h3>
                    <p class="lead mt-3">@Model.PersonalInfo.Summary</p>
                </div>
                <div class="col-md-4 contact-info">
                    <p><i class="fas fa-phone"></i> @Model.PersonalInfo.PhoneNumber1</p>
                    <p><i class="fas fa-phone"></i> @Model.PersonalInfo.PhoneNumber2</p>
                    <p><i class="fas fa-envelope"></i> @Model.PersonalInfo.Email</p>
                    <p><i class="fas fa-map-marker-alt"></i> @Model.PersonalInfo.Address</p>
                    <p><i class="fab fa-linkedin"></i> <a href="@Model.PersonalInfo.LinkedInUrl" target="_blank">LinkedIn Profile</a></p>
                </div>
            </div>
        </div>

        <!-- Education Section -->
        <section class="cv-section">
            <h2 class="section-title"><i class="fas fa-graduation-cap me-2"></i>Education</h2>
            @foreach (var edu in Model.EducationList)
            {
                <div class="timeline-item">
                    <h4>@edu.Degree</h4>
                    <h5 class="text-primary">@edu.Institution, @edu.Location</h5>
                    <p class="timeline-date">
                        @edu.StartDate.ToString("MMM yyyy") -
                        @if (edu.IsCurrent)
                        {
                            @:Present
                        }
                        else
                        {
                            @edu.EndDate.ToString("MMM yyyy")
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(edu.Description))
                    {
                        <p>@edu.Description</p>
                    }
                </div>
            }
        </section>

        <!-- Experience Section -->
        <section class="cv-section">
            <h2 class="section-title"><i class="fas fa-briefcase me-2"></i>Experience</h2>

            <!-- Internships -->
            @if (Model.Internships.Any())
            {
                <h4 class="mt-3">Internships</h4>
                foreach (var exp in Model.Internships)
                {
                    <div class="timeline-item">
                        <h4>@exp.JobTitle</h4>
                        <h5 class="text-primary">@exp.Company, @exp.Location</h5>
                        <p class="timeline-date">
                            @exp.StartDate.ToString("MMM yyyy") - @exp.EndDate.ToString("MMM yyyy")
                        </p>
                        <ul class="responsibility-list">
                            @foreach (var resp in exp.Responsibilities)
                            {
                                <li>@resp</li>
                            }
                        </ul>
                    </div>
                }
            }

            <!-- Volunteer Work -->
            @if (Model.VolunteerWork.Any())
            {
                <h4 class="mt-4">Volunteer Experience</h4>
                foreach (var exp in Model.VolunteerWork)
                {
                    <div class="timeline-item">
                        <h4>@exp.JobTitle</h4>
                        <h5 class="text-primary">@exp.Company, @exp.Location</h5>
                        <p class="timeline-date">
                            @exp.StartDate.ToString("MMM yyyy") - @exp.EndDate.ToString("MMM yyyy")
                        </p>
                        <ul class="responsibility-list">
                            @foreach (var resp in exp.Responsibilities)
                            {
                                <li>@resp</li>
                            }
                        </ul>
                    </div>
                }
            }
        </section>

        <!-- Skills Section -->
        <section class="cv-section">
            <h2 class="section-title"><i class="fas fa-code me-2"></i>Skills</h2>

            <div class="row">
                <!-- Technical Skills -->
                <div class="col-md-6">
                    <h5>Technical Skills</h5>
                    @foreach (var skill in Model.TechnicalSkills)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>@skill.Name</span>
                                <span>@skill.ProficiencyLevel/5</span>
                            </div>
                            <div class="proficiency-bar">
                                <div class="proficiency-fill" style="width: @(skill.ProficiencyLevel * 20)%;"></div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Languages -->
                <div class="col-md-3">
                    <h5>Languages</h5>
                    @foreach (var skill in Model.LanguageSkills)
                    {
                        <div class="mb-2">
                            <strong>@skill.Name</strong>
                            <div class="proficiency-bar">
                                <div class="proficiency-fill" style="width: @(skill.ProficiencyLevel * 20)%;"></div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Soft Skills -->
                <div class="col-md-3">
                    <h5>Soft Skills</h5>
                    @foreach (var skill in Model.SoftSkills)
                    {
                        <span class="skill-badge">@skill.Name</span>
                    }
                </div>
            </div>
        </section>

        <!-- Activities & Achievements -->
        <section class="cv-section">
            <h2 class="section-title"><i class="fas fa-trophy me-2"></i>Activities & Achievements</h2>

            <div class="row">
                @foreach (var activity in Model.Activities)
                {
                    <div class="col-md-6">
                        <div class="activity-item">
                            <h5>@activity.Name</h5>
                            <p class="mb-1"><strong>@activity.Role</strong> - @activity.Institution</p>
                            @if (activity.StartDate.HasValue)
                            {
                                <p class="text-muted">
                                    @activity.StartDate.Value.Year -
                                    @(activity.EndDate.HasValue? activity.EndDate.Value.Year.ToString() : "Present")
                                </p>
                            }
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>